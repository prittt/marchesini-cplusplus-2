{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build all the files in the current folder",
      "command": "/usr/bin/g++",
      "args": [
        "-g", // Include debugging symbols
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "*.cpp" // Compile all .cpp files in the folder
      ],
      "options": {
        "cwd": "${fileDirname}" // Set the current working directory
      },
      "problemMatcher": [
        "$gcc" // Use the GCC problem matcher
      ],
      "group": {
        "kind": "build",
        "isDefault": true // Mark as the default build task
      },
      "detail": "Task generated for Linux with g++."
    }
  ],
  "version": "2.0.0"
}
